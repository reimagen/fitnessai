rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if the user is the owner of the document
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // Match any document in the 'users' collection
    match /users/{userId} {
      // Allow users to read and write (create, update, delete) their own profile document.
      allow read, write: if isOwner(userId);

      // Custom exercises created by individual users
      match /exercises/{exerciseName} {
        allow read, write: if isOwner(userId);
      }

      // Match any document in any subcollection under a user's document
      // This covers workoutLogs, personalRecords, etc.
      match /{subcollection}/{docId} {
        // Allow users to read and write documents in their own subcollections.
        allow read, write: if isOwner(userId);
      }
    }

    // Shared exercise library (read-only for authenticated clients)
    match /exercises/{exerciseId} {
      allow read: if request.auth != null;
      allow write: if false;
    }

    match /exerciseAliases/{aliasId} {
      allow read: if request.auth != null;
      allow write: if false;
    }

    match /config/{configId} {
      allow read: if request.auth != null;
      allow write: if false;
    }

    // Explicitly deny access to any other collection by default.
    // This is good practice, though Firestore denies by default if no rule matches.
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
